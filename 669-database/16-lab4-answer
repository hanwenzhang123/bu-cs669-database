VALUES(nextval('post_seq'), (SELECT person_id FROM Person WHERE first_name='Bryan'), 'Check out my social media accounts.', '04-01-2020', (SUBSTR(content, 1, 12) || '...'));



SUBSTR('Just arrived in the New York!', 1, 12) || '...' AS summary;

